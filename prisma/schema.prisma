// version is 6.18.0 because 7 sucks
generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // we can safetly ignore this error
}

enum Shape {
  Round
  Square
  Diamond
}

enum Color {
  LIGHT_PINK   @map("FFB6C1")
  LIGHT_PURPLE @map("B19CD9")
  LIGHT_BLUE   @map("AEEEEE")
  GOLD         @map("FFD700")
  CORAL        @map("FF6F61")
  LAVENDER     @map("E0BBE4")
  MINT_GREEN   @map("98FB98")
  WHEAT        @map("F5DEB3")
  SILVER       @map("C0C0C0")
  BLACK        @map("000000")
}

enum Material {
  Rubber
  Thread
}

enum Pendant {
  Knot
  Heart
}

model Configuration {
  id                String   @id @default(cuid())
  userId            String?
  bracelet1ImageUrl String
  bracelet2ImageUrl String
  bracelet1Config   Json
  bracelet2Config   Json
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("bracelets")
}